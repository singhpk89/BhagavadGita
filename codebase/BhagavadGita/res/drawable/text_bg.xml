<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/orange" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
              <solid 
              android:color="@color/orange" />  
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/orange" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    
    <item android:state_selected="true">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/orange" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/darkgray" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
</selector>
